    "version": "0.2.0",
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "api",
            "program": "${workspaceFolder}/api/server.ts",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "ts-node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "socket",
            "program": "${workspaceFolder}/socket/server.ts",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "ts-node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}